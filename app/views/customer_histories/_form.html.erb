<%= form_for([@customer, @customer_history]) do |f| %>
  <% if @customer_history.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h3><%= pluralize(@customer_history.errors.count, "error") %> prohibited this customer_history from being saved:</h3>

      <ul>
      <% @customer_history.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
  	<div class="col-md-6">
  	  <div class="field">
	    <%= f.label :problem %><br>
	    <%= f.text_area :problem, class: "form-control" %>
	  </div>
  	</div>
  	<div class="col-md-6">
  	  <div class="field">
	    <%= f.label :solution %><br>
	    <%= f.text_area :solution, class: "form-control" %>
	  </div>
  	</div>
  </div>

  <div class="row">
  	<div class="col-md-6">
  	  <div class="field">
	    <%= f.label :remark %><br>
	    <%= f.text_area :remark, class: "form-control" %>
	  </div>
  	</div>
  </div>
  <div class="row">
	<div class="col-md-8">
      <div class="form-group">
        <%= f.label :date_create %><br>
        <%= f.date_select :date_create, {:order => [:day, :month, :year], :start_year => 2000, :end_year => 2020},
          :class => "selectpicker" %>
      </div> 
    </div>
  </div>
  
  <br>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
